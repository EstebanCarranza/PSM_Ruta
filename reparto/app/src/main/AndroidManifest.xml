<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.twicky.estebancarranza.reparto">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mac_registro"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".mac_login"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".mac_home_sin_ruta"
            android:parentActivityName=".mac_login" />
        <activity
            android:name=".mac_home_con_ruta"
            android:parentActivityName=".mac_login" />
        <activity
            android:name=".mac_primera_carga"
            android:parentActivityName=".mac_home_sin_ruta" />
        <activity android:name=".mac_prc_confirmarCliente" />
        <activity android:name=".mac_prc_productosCliente"></activity>
    </application>

</manifest>